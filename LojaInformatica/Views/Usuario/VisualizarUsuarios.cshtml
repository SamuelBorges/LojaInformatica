
@{
    ViewBag.Title = "VisualizarUsuarios";
}
<div class="col-md-8 col-sm-12">
    <div class="portlet grey-cascade box">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-cogs"></i>Acessos:
            </div>

        </div>
    </div>
    <div class="portlet-body">
        <div class="table-responsive">
            <table id="tabela-usuarios" class="table table-hover table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Nome
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Situação
                        </th>
                        <th>
                            Cargo
                        </th>
                        <th>
                            Ação
                        </th>
                    </tr>
                </thead>
                <tbody class="tabela-completa">
                    @foreach (var usuario in ViewBag.usuarios)
                    {
                        <tr class="user-table">
                            <td id="id@(usuario.Id)">
                                @usuario.Id
                            </td>
                            <td id="nome@(usuario.Id)">
                                @usuario.Nome
                            </td>
                            <td id="email@(usuario.Id)">
                                @usuario.Email
                            </td>
                            <td id="estado@(usuario.Id)">
                                @if (usuario.Ativo)
                                {
                                    <span>Ativo</span>
                                }
                                else
                                {
                                    <span>Inativo</span>
                                }
                            </td>
                            <td id="nivelAcesso@(usuario.Id)">
                                @usuario.NivelAcesso
                            </td>
                            <td>
                                <div class="actions">
                                    <a class="btn btn-default btn-sm botao-editar-usuario" id="btn-editar@(usuario.Id)">
                                        @*<a href="@Url.Action("AlterarDadosUsuario", "Usuario")" class="btn btn-default btn-sm">*@

                                        <i class="fa fa-pencil"></i> Editar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div href="" class="ver-mais" onclick="VerMais()" id="Show">Ver mais</div>
</div>


