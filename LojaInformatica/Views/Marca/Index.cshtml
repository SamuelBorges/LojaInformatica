
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN VALIDATION STATES-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gift"></i>Produtos
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse" data-original-title="" title="">
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <!-- BEGIN FORM-->
                <form action="#" class="form-horizontal">
                    <div class="form-body">
                        <h3 class="form-section">Cadastrar novo produto</h3>
                        <div class="form-group has-warning">
                            <label class="control-label col-md-3">Nome:</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="inputWarning">

                            </div>
                        </div>


                        <div class="form-group has-warning">
                            <label class="control-label col-md-3">Descrição:</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="inputWarning">

                            </div>
                        </div>

                        <div class="form-group has-warning">
                            <label class="control-label col-md-3">Quantidade:</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="inputWarning">

                            </div>
                        </div>

                        <div class="form-group has-warning">
                            <label class="control-label col-md-3">Marca:</label>
                            <div class="col-md-4">
                                <select class="form-control input-lg" name="cliente.TipoPessoa" id="pessoa">
                                    <option value="0" name="cliente.TipoPessoa">Fisica</option>
                                    <option value="1" name="cliente.TipoPessoa">Juridica</option>
                                </select>

                            </div>
                        </div>



                        <div class="form-group has-warning">
                            <label class="control-label col-md-3">Preço unitário:</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="inputWarning">
                            </div>
                        </div>

                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="submit" class="btn green">Submit</button>
                                <button type="button" class="btn default">Cancel</button>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- END FORM-->
            </div>
        </div>
        <!-- END VALIDATION STATES-->
    </div>
</div>

